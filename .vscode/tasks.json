{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "custom-build-run",
            "type": "shell",
            "command": "cmd",
            "args": ["/C", "build.bat"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}